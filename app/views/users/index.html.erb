<div class="page-header">
  <h1>
    List of users
    <%= bootstrap_icon_link_to 'New User', new_user_path, "icon-plus icon-white", :class => "btn btn-success" %>
  </h1>
</div>

<%= show_flash %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Tickets</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
  <tr>
    <td>
      <%= user.name %>
      <% if user.is_admin %>
        <span class="label label-info">Admin</span>
      <% end %>
    </td>
    <td><%= user.email %></td>
    <td><%= user.tickets.count %></td>
    <td>
      <%= bootstrap_icon_link_to "Edit", edit_user_path(user), "icon-pencil icon-white", :class => "btn btn-small btn-primary" %>
      <%= bootstrap_icon_link_to 'Delete', user, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
