<div class="page-header">
  <h1>
    List of tickets
    <%= bootstrap_icon_link_to 'New Ticket', new_ticket_path, "icon-plus icon-white", :class => "btn btn-success" %>
  </h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Feedback by</th>
  </tr>
  </thead>
  <tbody>
<% @tickets.each do |ticket| %>
  <tr>
    <td><%= link_to ticket.category.name, ticket %></td>
    <td><%= ticket.title %></td>
    <td><%= ticket.user.name %></td>
  </tr>
<% end %>
</tbody>
</table>