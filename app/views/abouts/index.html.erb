<div class="page-header">
  <h1>How to use our ticketing system?</h1>
</div>

<%= show_flash %>

<% @abouts.each do |about| %>
  <div>
  <% if user_signed_in? and current_user.is_admin %>
    <div style="text-align:right; margin-bottom: 5px;">
    <%= bootstrap_icon_link_to 'Delete', about, "icon-trash icon-white", confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %>
    <%= bootstrap_icon_link_to 'Edit', edit_about_path(about), "icon-pencil icon-white", :class => "btn btn-primary" %>
  </div>
  <p style='padding:15px; background-color: #EBE9CC; margin-bottom: 20px;'><%= about.description %> </p>
  <% end %>
  </div>
<% end %>